<!DOCTYPE html>
<html>
    <head>
        <% include partials/_head %>
    </head>
    <body>
        <header>
            <% include partials/_header %>
        </header>
        <div class="jumbotron">
            <h1>TinyURLs</h1>
            <p class="lead">Make URLs tiny with TinyApp</p>
        </div>
        <div class="container">
            <% if (user) { %>
                <div class="row">
                <% for (const url in filteredURLs) { %>
                <div class="col-sm-6">
                    <div class="card text-center">
                        <div class="card-block">
                            <h4 class="card-title"><%= url %></h4>
                            <h6 class="card-subtitle"><a href="/u/<%= url %>"><%= urls[url].longURL %></a></h6>
                            <h6class="card-subtitle text-muted">created by <%= urls[url].userID %></h6>
                            <div class="card-block">
                                <form action="/urls/<%= url %>/delete" method="post">
                                    <a class="btn btn-primary" href="/urls/<%= url %>">Edit</a>
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
            <% } else {%>
                <div class="alert alert-warning">
                    <h1>You are not logged in!</h1>
                    <p><a href="/login">Login</a> or <a href="/register">Register</a> to continue</p>
                </div>
            <% } %>
            </div>
        </div>
        <footer>
            <% include partials/_footer %>
        </footer>
    </body>
</html>
